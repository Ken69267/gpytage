import pygtk
import gtk
import os

class gpytage:
	def __init__(self):
		self.window = gtk.Window(gtk.WINDOW_TOPLEVEL)
		self.window.set_title("GPytage")
		


		#self.button = gtk.Button("Hello World")
		#self.window.add(self.button)
		#self.button.show()
		self.window.show()

        files = ['package.keywords', 'package.unmask', 'package.mask', 'package.use']
		
	def folder_scan(self):
		dirs = []
		file = []
		for i in self.files:
			print i
			result = os.access("/etc/portage/"+i+"/", os.F_OK)
			if(result):
				print "Dir True"
				dirs.append(i)
			else:
				print "False"
				file.append(i)
		print dirs,file
		return dirs, file

